<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color2"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/report_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="REPORT"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reasons_for_reporting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:text="신고 사유" />

    <RadioGroup
        android:id="@+id/report_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/report_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="욕설" />

        <RadioButton
            android:id="@+id/report_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="만남 유도" />

        <RadioButton
            android:id="@+id/report_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성희롱" />

        <RadioButton
            android:id="@+id/report_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부적절한 광고" />

        <RadioButton
            android:id="@+id/report_item_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직접 입력" />

        <EditText
            android:id="@+id/report_resaon_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:gravity="start|top"
            android:hint="100자 이내"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="10"
            android:paddingStart="4dp"
            android:textSize="18sp" />

    </RadioGroup>

    <Button
        android:id="@+id/report_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:background="@drawable/random_start_btn_bg"
        android:text="신고하기"
        android:textColor="@color/color2" />
</LinearLayout>